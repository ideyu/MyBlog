<h1>Articles#index</h1>

<table class="table table-striped">
  
	<thead>
        <tr>
          <th>#</th>
          <th>Author</th>
          <th>Text</th>
          <th>Link</th>
        </tr>
    </thead>

  	<% @articles.each do |article| %>
	
    <tbody>
        <tr>
          <th scope="row"><%= article.id %></th>
          <td><%= article.author %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article) %></td>
        </tr>
    </tbody>

  <% end %>
</table>
